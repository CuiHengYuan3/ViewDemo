<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <com.example.viewdemo.fallingBallImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imag"
        />
<android.support.v7.widget.AppCompatTextView
    android:layout_width="200dp"
    android:layout_height="30dp"
    android:background="@drawable/ic_launcher_background"
    android:id="@+id/text"
    />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:maxLines="3"
        android:textIsSelectable="true"
        android:autoLink="all"
       android:id="@+id/as"
        android:scrollbars="vertical"  />
<EditText
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:drawableLeft="@mipmap/ic_launcher"
 android:background="@null"
   android:drawablePadding="3dp"
    android:drawableBottom="@drawable/sleceter" />
<AutoCompleteTextView
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:id="@+id/auto"
    android:completionThreshold="1"
    />
<CheckBox
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="是否选中"
    android:id="@+id/checkbox"
    android:button="@drawable/checkbox"
    />
</android.support.v7.widget.LinearLayoutCompat>